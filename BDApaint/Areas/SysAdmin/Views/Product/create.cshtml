@model BDApaint.Model.PRODUCT

@{
    Layout = "~/Areas/SysAdmin/Views/Shared/_Administrator.cshtml";
}
<script src="~/AdminContent/js/productJS/create.js"></script>
<div class="app-title">
    <div>
        <h1><i class="fa fa-edit"></i> Form Thêm</h1>
        <p>Thêm sản phẩm</p>
    </div>
    <ul class="app-breadcrumb breadcrumb">
        <li class="breadcrumb-item"><i class="fa fa-home fa-lg"></i></li>
        <li class="breadcrumb-item">Forms</li>
        <li class="breadcrumb-item"><a href="#">Form Components</a></li>
    </ul>
</div>
<div class="row">
    <div class="col-md-12">
        @if (TempData["alertMessage"] != null)
        {
            <div id="alertBox" class="alert @TempData["alertType"]">
                @TempData["alertMessage"]
            </div>
            <script>
                var box = $('#alertBox');
                box.delay(4000).slideUp(500);
            </script>
        }
            <div class="tile">
                @using (Html.BeginForm("Create", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true,"",new { @class="text-danger"})
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label for="PRODUCT_NAME">Tên sản phẩm</label>
                                @Html.TextBoxFor(x => x.PRODUCT_NAME, new { @class = "form-control", @placeholder = "SƠN XXX" })
                                @Html.ValidationMessageFor(x => x.PRODUCT_NAME, null, new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label for="PRODUCER_ID">
                                    Hãng :
                                </label>
                                @Html.DropDownListFor(x => x.PRODUCER_ID, (IEnumerable<SelectListItem>)ViewBag.s, new { @class = "form-control " })
                            </div>
                            <div class="form-group">
                                <label for="label-form-admin">
                                    Loại :
                                </label>
                                @Html.DropDownListFor(x => x.PRODUCT_TYPE_ID, (IEnumerable<SelectListItem>)ViewBag.s1, new { @class = "form-control " })
                            </div>
                            <div class="form-group">
                                <label for="PRICE">
                                    Giá (đ):
                                </label>
                                @Html.TextBoxFor(x => x.PRICE, new { @class = "form-control", type = "number" })
                                @Html.ValidationMessageFor(x => x.PRICE, null, new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label for="CODE_AUTH">
                                    Mã kiểm tra:
                                </label>
                                @Html.TextBoxFor(x => x.CODE_AUTH, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.CODE_AUTH, null, new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label for="DATE_OF_MANUFACTURE">
                                    Ngày sản xuất:
                                </label>
                                @Html.TextBoxFor(x => x.DATE_OF_MANUFACTURE, new { @class = "form-control ", type = "date" })
                                @Html.ValidationMessageFor(x => x.DATE_OF_MANUFACTURE, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label for="LIMITED_USE">
                                    Hạn sử dụng (tháng):
                                </label>
                                @Html.TextBoxFor(x => x.LIMITED_USE, new { @class = "form-control", type = "number" })
                                @Html.ValidationMessageFor(x => x.LIMITED_USE, null, new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label for="DESCRIPTION">
                                    Mô tả:
                                </label>
                                @Html.TextAreaFor(x => x.DESCRIPTION, new { @class = "form-control", @rows = "5" })
                                @Html.ValidationMessageFor(x => x.DESCRIPTION, null, new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label for="NET">
                                    Thể tích (lít):
                                </label>
                                @Html.TextBoxFor(x => x.NET, new { @class = "form-control", type = "number" })
                                @Html.ValidationMessageFor(x => x.NET, null, new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label class="control-label">
                                    Loại giảm giá - khuyến mãi:
                                </label>
                                @Html.DropDownListFor(x => x.DISCOUNT, (IEnumerable<SelectListItem>)ViewBag.lstDiscount, new { @class = "form-control " })
                            </div>
                            <div class="form-group">
                                <label for="IMAGE">
                                    Hình ảnh:
                                </label>
                                @Html.TextBoxFor(x => x.IMAGE, new { @class = "form-control-file", type = "file" })
                                @Html.ValidationMessageFor(x => x.IMAGE, null, new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="tile-footer">
                        <button class="btn btn-primary" type="submit">Lưu</button>
                        <a class="btn btn-primary" href="@Url.Action("Index", "Product")">Trang chủ</a>
                    </div>
                }

            </div>
    </div>
</div>

