<div class="div-above-detail">
    <h4 class="title-above-detail">Chi tiết đơn nhâp</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt class="odd">
            Mã:
        </dt>

        <dd class="odd">
            @Html.DisplayFor(model => model.ID)
        </dd>

        <dt class="even">
            Tên:
        </dt>

        <dd class="even">
            @Html.DisplayFor(model => model.PRODUCT.PRODUCT_NAME)
        </dd>

        <dt class="odd">
            Đơn vị tính:
        </dt>

        <dd class="odd">
            @Html.DisplayFor(model => model.IMPORT_AMOUNT) THÙNG
        </dd>

        <dt class="odd">
            Đơn giá
        </dt>

        <dd class="odd">
            @String.Format("{0:0,0}", Model.IMPORT_PRICE) VND
        </dd>

        <dt class="even">
            Số lượng nhập
        </dt>

        <dd class="even">
            @Html.DisplayFor(model => model.IMPORT_AMOUNT_REAL) THÙNG
        </dd>



        <dt class="even">
            Thành tiền
        </dt>

        <dd class="even">
            @String.Format("{0:0,0}", Model.IMPORT_INTO_MONEY) VND
        </dd>

        <dt class="odd">
            Mã đơn nhập
        </dt>

        <dd class="odd">
            @Html.DisplayFor(model => model.IMPORT_ID)
        </dd>
    </dl>
