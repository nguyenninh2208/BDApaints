@model BDApaint.Model.DELIVERY_TYPE
@{
    Layout = "~/Areas/SysAdmin/Views/Shared/_Administrator.cshtml";
}
<script src="~/AdminContent/js/Delivery_Type/create.js"></script>
<div class="app-title">
    <div>
        <h1><i class="fa fa-edit"></i> Form Thêm</h1>
        <p>Thêm loại vận chuyển</p>
    </div>
    <ul class="app-breadcrumb breadcrumb">
        <li class="breadcrumb-item"><i class="fa fa-home fa-lg"></i></li>
        <li class="breadcrumb-item">Forms</li>
        <li class="breadcrumb-item"><a href="#">Form Components</a></li>
    </ul>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="tile">
            <form id="formData">
                @Html.ValidationSummary(true)
                @Html.AntiForgeryToken()
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label class="control-label">
                                Tên loại:
                            </label>
                            @Html.TextBoxFor(x => x.DELIVERY_TYPE_NAME, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.DELIVERY_TYPE_NAME, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label class="control-label">
                                Mô tả:
                            </label>
                            @Html.TextBoxFor(x => x.DESCRIPTION, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.DESCRIPTION, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="tile-footer">
                    <input type="submit" value="Thêm" class="btn btn-success" id="btnSubmit" />
                    <a class="btn btn-primary" href="@Url.Action("Index", "Delivery_Type")">Trang chủ</a>
                </div>
            </form>
        </div>
    </div>
</div>