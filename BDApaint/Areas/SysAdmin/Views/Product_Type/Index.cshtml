<div class="row">
    <div class="col-md-12">
        <div class="tile">
            <div class="tile-body">
                <table class="table table-hover table-bordered" id="sampleTable">
                    <thead>
                        <tr>
                            <th>Mã loại</th>
                            <th>Tên loại</th>
                            <th>Công dụng</th>
                            <th>Phương thức</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in Model)
                        {
                            <tr>
                                <td>@x.TYPE_ID</td>
                                <td>@x.TYPE_NAME</td>
                                <td>@x.USES</td>
                                <td>
                                    <a href="@Url.Action("Edit",new {id = x.TYPE_ID })" class="showEdit button">
                                        <i class="fa fa-pencil-square-o fa-lg" aria-hidden="true"></i>
                                    </a>
                                    <a href="@Url.Action("Delete",new { id = x.TYPE_ID})" class="show-Edit button">
                                        <i class="fa fa-trash fa-lg" aria-hidden="true"></i>
                                    </a>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
