@{
    ViewBag.Title = "Danh sach chi tiết giao dịch";
    Layout = "~/Areas/SysAdmin/Views/Shared/_Administrator.cshtml";
}
<div class="app-title">
    <div>
        <h1><i class="fa fa-th-list"></i>Danh sách nhóm màu chính</h1>
        <p>Bảng thông tin danh sách nhóm màu chính</p>
    </div>
    <ul class="app-breadcrumb breadcrumb side">
        <li class="breadcrumb-item"><i class="fa fa-home fa-lg"></i></li>
        <li class="breadcrumb-item">Tables</li>
        <li class="breadcrumb-item active"><a href="#">Data Table</a></li>
    </ul>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="tile">
            <div class="tile-body">
                <table class="table table-hover table-bordered" id="sampleTable">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Tên nhóm màu</th>
                            <th>Mã màu</th>
                            @*<th>Hành động</th>*@
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in Model)
                        {
                            <tr>
                                <td>
                                  @x.COLOR_GROUP_ID
                                </td>
                                <td>@x.COLOR_GROUP_NAME</td>
                                <td>@x.COLOR_GROUP_CODE</td>
                                @*<td style="text-align:center">
                                    <a href="@Url.Action("edit",new {id = x.COLOR_GROUP_ID })" style="float:left;margin-left:30%" class="showEdit button">
                                        <i class="fa fa-pencil-square-o fa-lg" aria-hidden="true"></i>
                                    </a>
                                    <a href="@Url.Action("Delete",new { id = x.COLOR_GROUP_ID})" style="float:left;margin-left:10%;" class="show-Edit button">
                                        <i class="fa fa-trash fa-lg" aria-hidden="true"></i>
                                    </a>
                                </td>*@
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>