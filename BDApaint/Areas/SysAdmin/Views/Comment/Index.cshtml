                            }
                            else
                            {
                                <td>@x.Comment_Content</td>
                            }
                            <td>@x.date</td>
                            <td>
                                @*<a href="@Url.Action("Edit", new { id = x.Comment_ID })" style="float:left;margin-left:10px" class="showEdit button">
                                    <i class="fa fa-pencil-square-o fa-lg" aria-hidden="true"></i>
                                </a>*@
