@{
    Layout = "~/Areas/SysAdmin/Views/Shared/_Administrator.cshtml";
}
<div class="app-title">
    <div>
        <h1><i class="fa fa-th-list"></i>Danh sách hấng sản xuất</h1>
        <p>Bảng thông tin các hãng sản xuất</p>
    </div>
    <ul class="app-breadcrumb breadcrumb side">
        <li class="breadcrumb-item"><i class="fa fa-home fa-lg"></i></li>
        <li class="breadcrumb-item">Tables</li>
        <li class="breadcrumb-item active"><a href="#">Data Table</a></li>
    </ul>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="tile">
            <div class="tile-body">
                <table class="table table-hover table-bordered" id="sampleTable">
                    <thead>
                        <tr>
                            <th>Mã</th>
                            <th>Tên hãng sản xuất</th>
                            <th>Địa chỉ</th>
                            <th>Số điện thoại</th>
                            <th>Email</th>
                            <th>URL</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in Model)
                        {
                            <tr>
                                <td>
                                    <div title="Chi tiết" class="text-dark bg-transparent" style="cursor: pointer">
                                        <a onclick="getdetail(@x.PRODUCER_ID)">@x.PRODUCER_ID</a>
                                    </div>
                                </td>
                                <td>@x.PRODUCER_NAME</td>
                                <td>@x.ADDRESS</td>
                                <td>@x.PHONE</td>
                                <td>@x.EMAIL</td>
                                <td>@x.URL</td>
                                <td>
                                    <a href="@Url.Action("edit",new {id = x.PRODUCER_ID })" style="float:left" class="showEdit button">
                                        <i class="fa fa-pencil-square-o fa-lg" aria-hidden="true"></i>
                                    </a>
                                    <a href="@Url.Action("Delete",new { id = x.PRODUCER_ID})" style="float:left;margin-right:2px;" class="show-Edit button">
                                        <i class="fa fa-trash fa-lg" aria-hidden="true"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>