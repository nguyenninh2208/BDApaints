@model BDApaint.Model.DELIVERY
@{
    Layout = "~/Areas/SysAdmin/Views/Shared/_Administrator.cshtml";
}
<script src="~/AdminContent/js/Delivery_Company/edit.js"></script>
<div class="app-title">
    <div>
        <h1><i class="fa fa-edit"></i> Form Cập nhật</h1>
        <p>Cập nhật đơn vị vận chuyển</p>
    </div>
    <ul class="app-breadcrumb breadcrumb">
        <li class="breadcrumb-item"><i class="fa fa-home fa-lg"></i></li>
        <li class="breadcrumb-item">Forms</li>
        <li class="breadcrumb-item"><a href="#">Form Components</a></li>
    </ul>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="tile">
            <form id="formData">
                @Html.ValidationSummary(true)
                @Html.AntiForgeryToken()
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label class="control-label">
                                ID
                            </label>
                            @Html.TextBoxFor(x => x.DELIVERY_ID, new { @class="form-control",@value= "@x.DELIVERY_ID", @readyonly=""})
                        </div>
                        <div class="form-group">
                            <label class="control-label">
                                Tên đơn vị vận chuyển:
                            </label>
                            @Html.TextBoxFor(x => x.DELIVERY_COMPANY_NAME, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.DELIVERY_COMPANY_NAME, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label class="control-label">
                                Số điện thoại:
                            </label>
                            @Html.TextBoxFor(x => x.DELIVERY_PHONE, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.DELIVERY_PHONE, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label class="control-label">
                                Địa chỉ:
                            </label>
                            @Html.TextBoxFor(x => x.DELIVERY_ADDRESS, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.DELIVERY_ADDRESS, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="tile-footer">
                    <input type="reset" value="Cập nhật" class="btn btn-success" id="btnSubmit" />
                    <a class="btn btn-primary" href="@Url.Action("Index", "Delivery")">Trang chủ</a>
                </div>
            </form>
        </div>
    </div>
</div>